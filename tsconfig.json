{
	"compilerOptions": {
		"rootDir": "src",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "dom", "dom.iterable"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"declaration": true,
		"declarationDir": "./src/types",
		"declarationMap": true,
		"baseUrl": "./",
		"jsx": "preserve",
		"jsxFactory": "DOMcreateElement",
		"jsxFragmentFactory": "DOMcreateFragment",
		"allowJs": true,
		"plugins": [
			{
				"typesCss": "typescript-plugin-css-modules"
			},
		],
		"outDir": "bundle",
		"types": [ "node" ],
		"typeRoots": [ "../node_modules/@types", "./src/types/index.d.ts" ],
		"paths": {
			"jsxFactory": ["./src/utils/jsxFactory/jsxFactory.ts"],
		},
	},
	"include": ["src"],
	"exclude": ["dist", "build", "bundle"]
}
